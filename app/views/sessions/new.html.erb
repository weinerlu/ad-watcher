<h1> Log In </h1>

<%= form_tag url: '/login' do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>

  <%= button_tag 'Log in', class: 'btn btn-primary' %>
<% end %>
